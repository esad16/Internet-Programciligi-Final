@model WebFinal.Models.Ogrenci
@{

    <div class="text-center">
        <h1 style="background-color:aqua;" class="display-4">Öğrenci Detay</h1>
    </div>
    <body style="background-color: aqua;">
    </body>

    
    <div>
        <form asp-action="Guncelle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" value="@Model.Ad" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" value="@Model.Soyad" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KayitTarih" class="control-label"></label>
                <input asp-for="KayitTarih" class="form-control" value="@Model.KayitTarih" />
                <span asp-validation-for="KayitTarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ÖgrenciNo" class="control-label"></label>
                <input asp-for="ÖgrenciNo" class="form-control" value="@Model.ÖgrenciNo" />
                <span asp-validation-for="ÖgrenciNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DTarih" class="control-label"></label>
                <input asp-for="DTarih" class="form-control" value="@Model.DTarih" />
                <span asp-validation-for="DTarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bolum" class="control-label"></label>
                <input asp-for="Bolum" class="form-control" value="@Model.Bolum" />
                <span asp-validation-for="Bolum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="uptadet" class="btn btn-primary" />
            </div>
        </form>

    </div>
}
